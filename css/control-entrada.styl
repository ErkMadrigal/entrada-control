/*colores*/

$azul = #004c98
$verde = #5d8e28
$verde1 = #5cb85c
$blanco = #FFFFFF
$fondo = #f7f5f5

/*=======================================
		clases generales o globales
=======================================*/

.no-outline
	outline 0
.bg-green
	background $verde1
.rgba-azul-0-7
	background rgba(0,76,152,0.7)
.border
	border .1rem solid $azul
.padding-3
	padding 3rem
.h2
	color $blanco
	font-family 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif
	font-weight 300

body.fondo-login
	height 41rem
	background-image url('../img/jpg/fondo-1.jpg')
	background-position center
	background-repeat no-repeat
	background-size cover
div.row
	div
		form
			margin-top 25%
			input 
				box-shadow none
				&::placeholder
					color #cacaca
			button.boton-entrar
				font-weight bold
				border .1rem solid $verde
				&:hover
					border .1rem solid $verde1
					background $verde
					color white
					font-weight bold
/*para pantallas de resolucion 1024px en adelante*/

.rectangulo-azul	
	height 0.5rem
	background-color $verde
.rectangulo-azul
	background-color $azul
	height 5rem
	box-shadow: 0px 10px 6px -5px rgba(0,0,0,0.30)
.titulos-h1
	color $blanco
	font-family 'Open Sans', sans-serif, arial;
	
.logos
	padding-top 2%
.logo
	height 5.9375rem
.fondo 
	background-color $fondo
.mascota-univer
	height 7rem
.columna
	height 8rem
	background-color $fondo
.grupo
	height 3.5rem
.matricula
	height 3.5rem
	font-size 1.4rem
.botones
	background-color $verde
	width 10rem 
	font-size 1rem
.credencial
	font-size 2rem	
.separador
	height 7rem
	
.datos-alumno
	padding-top 1rem
	font-size 1.4rem
	
.separador-datos
	height 5rem

.fotos-alumno
	height 21rem
	width 18rem
	border .4rem solid #004c98

.ocultar-elementos
	display none
/*foto de los alumnos*/

.separador-data
	height 2rem

/* lista*/
.trs
	background-color #004c98
	color white
.trst
	background-color #004c98
	color white

.dia-actual
	background-color #449d44
	color black
.dia-normal
	background-color #004c98
	color white

.asistencia
	background-color #086acd
	color white
.falta
	background-color #cc4b37
	color black

/*lista*/


/*para pantallas de resolucion 640px en adelante*/

@media screen and (min-width: 40em) and (max-width: 63.9375em)
	.rectangulo-verde
		height 1rem
	.separador
		height 24rem
	.rectangulo-azul
		height 10rem
	.titulos-h1
		font-size 5rem
		padding-top 1rem
	.logo
		height 14rem
	.mascota-univer
		height 18rem
	.matricula 
		height 10rem
		font-size 1.8rem
	.botones 
		background-color #5d8e28
		width 11rem
		font-size 2rem
		height 6rem
	.grupo
		padding 2rem
	.credencial
		font-size 3rem